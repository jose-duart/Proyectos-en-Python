      }
    },
    {
      "cell_type": "code",
      "source": [
        "grado = float(input(\"Ingrese el grado\"))\n",
        "\n",
        "def calcula_grado (grado):\n",
        "  if grado > 0.9:\n",
        "    return \"A\"\n",
        "  elif grado > 0.8:\n",
        "    return \"B\"\n",
        "  elif grado > 0.7:\n",
        "    return \"C\"\n",
        "  elif grado > 0.6:\n",
        "    return \"D\"\n",
        "  elif grado <= 0.6:\n",
        "    return \"F\"\n",
        "\n",
        "if grado > 0 and grado < 1:\n",
        "  print(calcula_grado(grado))\n",
        "else:\n",
        "  print(\"Score incorrecto\")"
